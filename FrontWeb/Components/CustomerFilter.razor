@using FrontWeb.DTO
@inject HttpClient HttpClient 

<select @bind="pSelectedCustomerId"> 
  <option value="">-- Select Customer --</option>
  @if (_customers != null)
  {
    @foreach (var customer in _customers)
    {
      <option value="@customer.IdCustomer">@customer.CustomerName</option>
    }
  }
</select>

@code {
    [Parameter]
    public int? pSelectedCustomerId { get; set; }

    private List<CustomerDTO> _customers = new List<CustomerDTO>();

    protected override async Task OnInitializedAsync()
    {
        _customers = await HttpClient.GetFromJsonAsync<List<CustomerDTO>>("/api/Customer");
    }
}