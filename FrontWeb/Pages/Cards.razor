@page "/cards"

@using FrontWeb.Components
@using Radzen.Blazor
@using Radzen.Blazor.Rendering
@using SamaCardAll.Shared.Contracts.ViewModels

@inject HttpClient HttpClient
@inject IJSRuntime JSRuntime;

<h3>Cards</h3>

<RadzenButton Shade="Shade.Darker" Click=@(args => OpenModal()) Text="New Card" ButtonStyle="ButtonStyle.Primary" />
<p />

<RadzenDataGrid TItem="CardViewModel" Data="@cards" PagerPosition="PagerPosition.Bottom" AllowPaging="true" PageSize="5" PagerHorizontalAlign="HorizontalAlign.Center" AllowSorting="true">
    <Columns>
        <RadzenDataGridColumn TItem="CardViewModel" Property="Bank" Title="Bank" Width="250px">
            <HeaderTemplate>
                <strong style="font-size:medium">Bank</strong>
            </HeaderTemplate>
        </RadzenDataGridColumn>

        <RadzenDataGridColumn TItem="CardViewModel" Property="Number" Title="Number">
            <HeaderTemplate>
                <strong style="font-size:medium">Number</strong>
            </HeaderTemplate>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="CardViewModel" Property="Expiration" Title="Expiration">
            <HeaderTemplate>
                <strong style="font-size:medium">Expiration</strong>
            </HeaderTemplate>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="CardViewModel" Property="Brand" Title="Brand">
            <HeaderTemplate>
                <strong style="font-size:medium">Brand</strong>
            </HeaderTemplate>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="CardViewModel" Property="Active" Title="Active">
            <HeaderTemplate>
                <strong style="font-size:medium">Active</strong>
            </HeaderTemplate>
            <Template Context="card">
                <RadzenCheckBox Value="card.Active == 1" Name="Active" TriState="false" Disabled="false" ReadOnly="true" />
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="CardViewModel" Property="Actions">
            <Template Context="card">
                <RadzenButton Click="@(args => Edit(card))" Icon="edit" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Medium" />
                <RadzenButton Click="@(args => Delete(card))" Icon="delete" ButtonStyle="ButtonStyle.Danger" Size="ButtonSize.Medium" />
            </Template>
        </RadzenDataGridColumn>
    </Columns>
</RadzenDataGrid>

<ErrorMessage ErrorVisible="@errorVisible" ErrorMessage="@errorMessage" />

<ModalDialog @ref="@modalDialog" Title=@TitleModal>
    <EditCardForm card="card" OnValidSubmit="HandleValidSubmit" />
</ModalDialog>

@code {

    [Parameter]
    public EventCallback OnValidSubmit { get; set; }

    [Parameter]
    public ModalDialog modalDialog { get; set; }

    [Parameter]
    public EditCardForm editCardForm { get; set; }

    // Using the ErrorMessage Component
    private bool errorVisible { get; set; }
    private string errorMessage { get; set; }

    private CardViewModel card = new CardViewModel();
    private List<CardViewModel> cards = new List<CardViewModel>();

    private String TitleModal = "New Card";

    protected override async Task OnInitializedAsync()
    {
        await LoadCards();
    }

    private async Task LoadCards()
    {
        var allCards = await HttpClient.GetFromJsonAsync<List<CardViewModel>>("/api/Card");

        cards = allCards;

        Console.WriteLine($"LoadCards: _cards.Count = {cards.Count}");
        StateHasChanged();
    }

    private async Task HandleValidSubmit()
    {
        if (await Save())
        {
            await OnValidSubmit.InvokeAsync();
            modalDialog.Close();
        }
    }

    private void OpenModal(CardViewModel cardToEdit = null)
    {
        if (cardToEdit != null)
        {
            this.card = cardToEdit;
            TitleModal = "Edit Card";
        }
        else
        {
            this.card = new CardViewModel();
            TitleModal = "New Card";
        }

        modalDialog.Open();
    }

    private async Task<bool> Save()
    {
        if (card == null)
            return false;

        var response = card.IdCard == 0
            ? await HttpClient.PostAsJsonAsync<CardViewModel>($"/api/Card/", card) // New card, use POST
            : await HttpClient.PutAsJsonAsync<CardViewModel>($"/api/Card/{card.IdCard}", card); // Existing card, use PUT for update

        if (response.IsSuccessStatusCode)
        {
            await LoadCards();
            StateHasChanged();

            return true;
        }
        else
        {
            Console.WriteLine($"Error saving Card: {response.StatusCode} - {await response.Content.ReadAsStringAsync()}");
            return false; 
        }
    }

    private void Edit(CardViewModel card)
    {
        OpenModal(card);
    }

    private async Task Delete(CardViewModel card)
    {
        var confirmDelete = await JSRuntime.InvokeAsync<bool>("confirm", new object[] { "Are you sure you want to delete this card?" });

        if (confirmDelete)
        {
            try
            {
                var response = await HttpClient.DeleteAsync($"/api/Card/{card.IdCard}");
                if (response.IsSuccessStatusCode)
                {
                    // Remove the card from the list and update List
                    cards.Remove(card);
                    await LoadCards();
                    StateHasChanged();
                }
                else
                {
                    // Extract error message from response body
                    var errorContent = await response.Content.ReadAsStringAsync();
                    int startIndex = errorContent.IndexOf("SQLite Error");
                    var errorSubstring = errorContent.Substring(startIndex, 48);
                    errorMessage = $"Error: {errorSubstring}";
                    errorVisible = true;
                }
            }
            catch (Exception ex)
            {
                // Handle Network Error
                errorVisible = true;
                errorMessage = $"Error: {ex.Message}";
            }
        }
    }
}