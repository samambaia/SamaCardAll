@page "/spends"

@using FrontWeb.Components
@using SamaCardAll.Shared.Contracts.ViewModels
@using Radzen.Blazor
@using Radzen.Blazor.Rendering

@inject HttpClient HttpClient
@inject IJSRuntime JSRuntime;
@inject NavigationManager NavigationManager;

<h3>Spends</h3>

<RadzenButton Shade="Shade.Darker" Click=@(args => OpenModal()) Text="New Spend" ButtonStyle="ButtonStyle.Primary" />
<p />

<RadzenDataGrid TItem="SpendViewModel" Data="@allSpendsViewModel" PagerPosition="PagerPosition.Bottom" AllowPaging="true" PageSize="8" PagerHorizontalAlign="HorizontalAlign.Center" AllowSorting="true">
    <Columns>
        <RadzenDataGridColumn TItem="SpendViewModel" Property="Expenses" Title="Expense" Width="300px">
            <HeaderTemplate>
                <strong style="font-size:medium">Expense</strong>
            </HeaderTemplate>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="SpendViewModel" Property="Date" Title="Date Purchase">
            <HeaderTemplate>
                <strong style="font-size:medium">Date Purchase</strong>
            </HeaderTemplate>
            <Template Context="spendDTO">
                @spendDTO.Date.ToString("dd/MM/yyyy")
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="SpendViewModel" Property="Spend.Amount" Title="Amount">
            <HeaderTemplate>
                <strong style="font-size:medium">Amount</strong>
            </HeaderTemplate>
            <Template Context="spendDTO">
                @spendDTO.Amount.ToString("C2")
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="SpendViewModel" Property="Spend.CardName" Title="Card Bank">
            <HeaderTemplate>
                <strong style="font-size:medium">Card Bank</strong>
            </HeaderTemplate>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="SpendViewModel" Property="Spend.CustomerName" Title="Customer Name">
            <HeaderTemplate>
                <strong style="font-size:medium">Customer Name</strong>
            </HeaderTemplate>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="SpendViewModel" Property="Actions">
            <Template Context="item">
                <RadzenButton Click=@(args => Edit(item)) Icon="edit" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Medium" />
                <RadzenButton Click=@(args => Delete(item)) Icon="delete" ButtonStyle="ButtonStyle.Danger" Size="ButtonSize.Medium" />
            </Template>
        </RadzenDataGridColumn>
    </Columns>
</RadzenDataGrid>

<ErrorMessage ErrorVisible="@errorVisible" ErrorMessage="@errorMessage" />

<ModalDialog @ref="@modalDialog" Title=@TitleModal>
    <EditSpendForm pSpend="spendViewModel" OnValidSubmit="HandleValidSubmit" />
</ModalDialog>

@code {

    [Parameter]
    public EventCallback OnValidSubmit { get; set; }

    [Parameter]
    public ModalDialog modalDialog { get; set; }

    // Using the ErrorMessage Component
    private bool errorVisible { get; set; }
    private string errorMessage { get; set; }

    private ModalInstallment modalInstallment { get; set; }

    private List<SpendViewModel> allSpendsViewModel = new List<SpendViewModel>();
    private SpendViewModel spendViewModel;

    private decimal amount;
    private decimal installmentValue;

    private String TitleModal = "New Spend";

    protected override async Task OnInitializedAsync()
    {
        await LoadSpends();
    }

    private async Task LoadSpends()
    {
        var spends = await HttpClient.GetFromJsonAsync<List<SpendViewModel>>("/api/Spend?include=card,customer");

        allSpendsViewModel = spends
            .Where(s => s.Deleted == 0)
            .OrderByDescending(s => s.Date)
            .ToList();

        StateHasChanged();
    }

    private async void HandleValidSubmit()
    {
        if (await Save())
        {
            await OnValidSubmit.InvokeAsync();
            modalDialog.Close();
        }
        //modalDialog.Close();
    }

    private void OpenModal(SpendViewModel spendToEdit = null)
    {
        if (spendToEdit != null)
        {
            this.spendViewModel = spendToEdit;

            amount = this.spendViewModel.Amount;
            installmentValue = this.spendViewModel.InstallmentValue;

            TitleModal = "Edit Spend";
        }
        else
        {
            this.spendViewModel = new SpendViewModel();
            amount = 0;
            installmentValue = 0;

            TitleModal = "New Spend";
        }

        modalDialog.Open();
    }

    private async Task<bool> Save()
    {
        if (spendViewModel == null)
            return false;

        try
        {
            var response = spendViewModel.IdSpend == 0
                ? await HttpClient.PostAsJsonAsync<SpendViewModel>($"/api/Spend/", spendViewModel) // New spend, use POST
                : await HttpClient.PutAsJsonAsync<SpendViewModel>($"/api/Spend/{spendViewModel.IdSpend}", spendViewModel); // Existing spend, use PUT for update

            if (response.IsSuccessStatusCode)
            {
                await LoadSpends();
                return true; // Return true indicating successful save
            }
            else
            {
                errorVisible = true;
                errorMessage = $"Error saving Spend: {response.StatusCode} - {await response.Content.ReadAsStringAsync()}";
                return false; // Return false indicating save failed
            }
        }
        catch (Exception ex)
        {
            // Handle Network Error
            errorVisible = true;
            errorMessage = $"Error: {ex.Message}";
            return false;
        }
    }

    private void Edit(SpendViewModel spend)
    {
        OpenModal(spend);
    }

    private async Task Delete(SpendViewModel spend)
    {
        var confirmDelete = await JSRuntime.InvokeAsync<bool>("confirm", new object[] { "Are you sure you want to delete this Spend?" });

        if (confirmDelete)
        {
            try
            {
                var response = await HttpClient.DeleteAsync($"/api/Spend/{spend.IdSpend}");
                if (response.IsSuccessStatusCode)
                {
                    // Remove the spend from the list by Id to ensure correct removal and force UI update
                    var toRemove = allSpendsViewModel.FirstOrDefault(s => s.IdSpend == spend.IdSpend);
                    if (toRemove != null)
                    {
                        allSpendsViewModel.Remove(toRemove);
                    }
                    await LoadSpends();
                }
                else
                {
                    // Extract error message from response body
                    var errorContent = await response.Content.ReadAsStringAsync();
                    errorMessage = $"Error: {ExtractErrorMessage(errorContent)}";
                    errorVisible = true;

                }
            }
            catch (Exception ex)
            {
                // Handle Network Error
                errorVisible = true;
                errorMessage = $"Error: {ex.Message}";
            }
        }
    }

    private string ExtractErrorMessage(string errorContent)
    {
        if (string.IsNullOrEmpty(errorContent))
            return "Unknown error.";

        int startIndex = errorContent.IndexOf("SQLite Error");
        if (startIndex >= 0 && errorContent.Length >= startIndex + 48)
        {
            return errorContent.Substring(startIndex, 48);
        }
        // Fallback: return first 100 chars or full message
        return errorContent.Length > 100 ? errorContent.Substring(0, 100) : errorContent;
    }
}